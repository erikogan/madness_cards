<?xml version="1.0"?>
<fop version="1.0">
  <base>.</base>
  <renderers>
    <renderer mime="application/pdf">
      <fonts>
       <font embed-url="Cochin.ttf" kerning="yes">
         <font-triplet name="Cochin" style="normal" weight="normal"/>
       </font>
       <font embed-url="Cochin-Bold.ttf" kerning="yes">
         <font-triplet name="Cochin" style="normal" weight="bold"/>
       </font>
       <font embed-url="Cochin-Italic.ttf" kerning="yes">
         <font-triplet name="Cochin" style="italic" weight="normal"/>
       </font>
       <font embed-url="Cochin-Bold-Italic.ttf" kerning="yes">
         <font-triplet name="Cochin" style="italic" weight="bold"/>
       </font>
    </fonts>
    </renderer>
  </renderers>
</fop>

